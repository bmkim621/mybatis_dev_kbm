<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="application.properties" />
	
	<typeAliases>
		<package name="kr.or.yi.mybatis_dev_kbm.dto"/>
	</typeAliases>
	
	<typeHandlers>
		<package name="kr.or.yi.mybatis_dev_kbm.typehandlers"/>
	</typeHandlers>
	
	<environments default="development2">
		<environment id="development1">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
		
		<environment id="development2">
			<transactionManager type="JDBC" />
			<dataSource type="kr.or.yi.mybatis_dev_kbm.jdbc.C3P0DataSourceFactory">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="mappers/StudentMapper.xml"/>
		<mapper resource="mappers/AddressMapper.xml"/>
		<mapper resource="mappers/CourseMapper.xml"/>
		<mapper resource="mappers/TutorMapper.xml"/>
		<package name="kr.or.yi.mybatis_dev_kbm.dao"/>
	</mappers>
</configuration>